<% provide :title, t("actors.index.all_actor") %>

<div class="container-fluid header-block">
  <h1 class="text-capitalize">
    <%= t "actors.index.all_actor" %>
  </h1>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <%= render "actors/slide_bar_actor", genres: @genres %>
    </div>
    <div class="col-sm-9 tab-style-1-content">
      <div class="row">
        <div class="col-sm-12">
          <div class="row genre-header">
            <div class="col-sm-9">
              <h1 class="title-actor-list"> <br></h1>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <% @actors.each do |actor| %>
          <%= render "actors/actor", actor: actor %>
        <% end %>
      </div>
      <div class="row">
        <div class="col-sm-9">
          <hr>
          <%= will_paginate @actors %>
        </div>
        <br>
        <% if user_signed_in? %>
          <%= link_to new_actor_path, id: "button-add-actor",  class: "btn btn-primary pull-right"  do %>
            <span class="glyphicon glyphicon-plus"></span>
            <%= t "actor.action.add_actor" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
