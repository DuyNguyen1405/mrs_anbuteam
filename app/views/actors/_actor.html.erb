<div class="col-sm-4">
  <div class="box-outer">
    <div class="box">
      <div class="frame">
        <div class="caption">
        </div>
        <div class="img-frame">
          <%= link_to (image_tag(actor.avatar, alt: "image actor",
            height: "200", width: "200")), actor %>
        </div>
      </div>
      <div class="text-column btn btn-primary">
        <h3>
          <%= link_to actor.name.truncate(15), actor,
            "data-turbolinks": false %>
        </h3>
        <% if user_signed_in? %>
          <h4>
          <%= link_to edit_actor_path(actor),  class: "btn btn-warning glyphicon glyphicon-edit" do %>
            <%= t "actor.action.edit" %>
          <% end %>
          <%= link_to t("actor.action.delete"), "/actors/#{actor.id}",
          method: :delete,data: {confirm: "are you sure?"},
            class: "btn btn-danger glyphicon glyphicon-erase" %>
          </h4>
        <% end %>
      </div>
    </div>
  </div>
</div>
