<div class="ltt-body-content">
  <div class="ltt-news-feed">
    <div class="left-news-feed">
      <%= render "left_news_feed", followings: @followings, know_users: @know_users %>
    </div>
    <div class="col-md-9 show-follow-images">
      <div class="new-image">
        <div class="description-field user-avatar-small">
          <%= link_to image_tag("avatar.png"), "#" %>
          <%= text_area :description, class: "form-control image-description" %>
        </div>
        <div class="image-file">
          <%= file_field :image, class: "image-file" %>
        </div>
        <div class="actions">
          <%= submit_tag t("upload-review"), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
